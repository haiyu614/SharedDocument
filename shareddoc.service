[Unit]
Description=Shared Document System
After=network.target mysql.service

[Service]
Type=simple
User=root
WorkingDirectory=/var/www/SharedDocument-tchen
Environment="PATH=/var/www/SharedDocument-tchen/venv/bin"
Environment="FLASK_ENV=production"
ExecStart=/var/www/SharedDocument-tchen/venv/bin/gunicorn -k eventlet -w 1 --bind 127.0.0.1:5000 wsgi:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
